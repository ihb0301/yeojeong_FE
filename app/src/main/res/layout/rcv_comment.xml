<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="143dp">

    <Button
        android:id="@+id/button3"
        android:layout_width="28dp"
        android:layout_height="15dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="19dp"
        android:background="@null"
        android:backgroundTint="@android:color/transparent"
        android:drawableTint="@color/black"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        android:padding="0dp"
        android:text="3"
        android:textColor="@color/black"
        android:textSize="10sp"
        app:cornerRadius="0dp"
        app:icon="@drawable/heart_icon"
        app:iconGravity="textStart"
        app:iconPadding="3dp"
        app:iconSize="8dp"
        app:iconTint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:strokeWidth="1dp" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="24dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/overflow_icon" />

    <ImageView
        android:id="@+id/rcv_comment_profile"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/gray_ellipse" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="44dp"
        android:text="본문"
        android:textColor="@color/black"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="89dp"
        android:text="날짜"
        android:textColor="#B3B3B3"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="28dp"
        android:layout_height="16dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="108dp"
        android:background="@null"
        android:backgroundTint="@android:color/transparent"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        android:padding="0dp"
        android:text="답글"
        android:textColor="@color/black"
        android:textSize="10sp"
        app:cornerRadius="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeWidth="1dp" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:padding="0dp"
        android:text="작성자"
        app:layout_constraintBottom_toBottomOf="@+id/rcv_comment_profile"
        app:layout_constraintStart_toEndOf="@+id/imageView11"
        app:layout_constraintTop_toTopOf="@+id/imageView11" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/rcv_comment_profile"
        app:layout_constraintEnd_toEndOf="@+id/rcv_comment_profile"
        app:layout_constraintStart_toStartOf="@+id/rcv_comment_profile"
        app:layout_constraintTop_toTopOf="@+id/rcv_comment_profile"
        app:srcCompat="@drawable/purple_ellipse_empty" />
</androidx.constraintlayout.widget.ConstraintLayout>